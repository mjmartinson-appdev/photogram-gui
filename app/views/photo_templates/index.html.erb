<h1>List of photos</h1>

<form action="/add_photo">
  <label for="image_link">Image</label>
  <input type="text" id="image_link" name="input_img_link" placeholder="Enter a url for the image" >

  <label for="img_caption">Caption</label>
  <textarea id="img_caption" name="input_img_caption" placeholder="Enter a caption..."></textarea>

  <label for="owner_id">Owner ID</label>
  <input type="text" id="owner_id" name="input_owner_id" placeholder="Enter an ID of a user" >

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @list_of_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.poster.username %>
    </td>

    <td>
      <%= a_photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>
<% end %>